---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.svelte";
import { Marquee } from "../components/magicui/marquee.tsx";
import Card from "../components/Card.svelte";
import Button from "../components/Button.svelte";
import "../global.css";
import { Hamburger } from "svelte-hamburgers";
import inverse from "../assets/inverse-radius.svg";
import {
  BarChart3,
  Factory,
  PackageCheck,
  Receipt,
  ShoppingCart,
  Store,
  Truck,
  ArrowRight,
} from "@lucide/svelte";
import rocket from "../assets/rocket.svg";
// import Stats from "@/components/Stats";
import { Calculator } from "@lucide/astro";
import hero from "../assets/hero.jpg";
import ImageCard from "../components/ImageCard.svelte";
import HiW from "@/components/HiW";
interface ComplianceCategory {
  icon: any;
  title: string;
  description: string;
}

const complianceCategories: ComplianceCategory[] = [
  {
    icon: Receipt,
    title: "Indirect Tax",
    description: "Manage VAT, GST, and sales tax compliance requirements.",
  },
  {
    icon: BarChart3,
    title: "Finance",
    description: "Streamline financial reporting compliance.",
  },
  {
    icon: PackageCheck,
    title: "Customs & Excise",
    description: "Simplify cross-border trade compliance.",
  },
  {
    icon: Truck,
    title: "Logistics & Supply Chain",
    description: "Ensure compliance across global supply chains.",
  },
  {
    icon: ShoppingCart,
    title: "Procurement",
    description: "Maintain vendor compliance standard.",
  },
  {
    icon: Factory,
    title: "Manufacturing",
    description: "Streamline product compliance and certification processes.",
  },
  {
    icon: Calculator,
    title: "Direct Tax",
    description: "Simplify income and corporate tax complian.",
  },
  {
    icon: Store,
    title: "Sales & Distribution",
    description: "Manage documentation, compliance, and distribution.",
  },
];

const insightPacks = [
  {
    title: "Essentials",
    description: "Core compliance monitoring for immediate visibility.",
    points: ["Basic tax gap analysis", "Standard compliance alerts"],
  },
  {
    title: "Pro",
    description: "Advanced analytics for proactive management.",
    points: ["Detailed risk scoring", "Process efficiency metrics"],
  },
  {
    title: "Premium",
    description: "Strategic intelligence for process optimization.",
    points: ["Predictive compliance modeling", "Executive dashboards"],
  },
];
---

<Layout>
  <div class="flex justify-end items-end w-full top-0 left-0 z-[99]">
    <Hamburger type="emphatic" client:only="svelte" />
  </div>
  <div class=" w-full mb-0 flex flex-col h-screen">
    <Hero client:load />
    <Marquee client:only="react" className="flex-shrink-0">
      <img
        alt="Transistor"
        src="https://tailwindcss.com/plus-assets/img/logos/158x48/transistor-logo-gray-900.svg"
        width={158}
        height={48}
        class="col-span-2 max-h-12 w-full object-contain lg:col-span-1"
      />
      <img
        alt="Reform"
        src="https://tailwindcss.com/plus-assets/img/logos/158x48/reform-logo-gray-900.svg"
        width={158}
        height={48}
        class="col-span-2 max-h-12 w-full object-contain lg:col-span-1"
      />
      <img
        alt="Tuple"
        src="https://tailwindcss.com/plus-assets/img/logos/158x48/tuple-logo-gray-900.svg"
        width={158}
        height={48}
        class="col-span-2 max-h-12 w-full object-contain lg:col-span-1"
      />
      <img
        alt="SavvyCal"
        src="https://tailwindcss.com/plus-assets/img/logos/158x48/savvycal-logo-gray-900.svg"
        width={158}
        height={48}
        class="col-span-2 max-h-12 w-full object-contain sm:col-start-2 lg:col-span-1"
      />
      <img
        alt="Statamic"
        src="https://tailwindcss.com/plus-assets/img/logos/158x48/statamic-logo-gray-900.svg"
        width={158}
        height={48}
        class="col-span-2 col-start-2 max-h-12 w-full object-contain sm:col-start-auto lg:col-span-1 mr-12"
      />
    </Marquee>
  </div>

  <div class="bg-[whitesmoke] lg:p-16">
    <section class="h-full lg:bg-[whitesmoke] bg-blue-700 rounded-t-xl">
      <div class="relative bg-blue-700 lg:rounded-t-xl">
        <div class="flex w-full flex-col">
          <div
            class="h-full gap-x-16 p-12 pb-24 lg:p-20 !text-white bg-blue-700 rounded-t-xl"
          >
            <h1
              class="text-xl text-center lg:text-left lg:text-4xl font-bold mt-4 lg:mt-0"
            >
              Velocity
              <span class="font-thin mx-3">|</span>
              <span class="font-thin italic">A Taxera Product</span>
            </h1>
            <div class="">
              <h2 class="lg:text-2xl text-xl font-thin p-6 pb-0 text-balance">
                Taxera eCompliance delivers rapid integration by providing data,
                emphasizing speed and leveraging AI-powered intelligent analysis
                to detect compliance issues.
              </h2>
              <h2 class="lg:text-2xl text-xl font-thin p-6 pt-4 text-balance">
                Clear visualizations and actionable intelligence across all
                transactions are provided while highlighting priority concerns
                requiring immediate attention.
              </h2>
              <div
                class="italic flex font-thin lg:items-center lg:justify-center justify-center items-start gap-x-4 pl-6 mt-12 text-lg flex-col lg:flex-row"
              >
                <p class="mb-4 lg:mb-0">
                  Need some help deciding if Taxera's eCompliance solution is
                  right for you?
                </p>
                <Button
                  variant="ghost"
                  text="You'll never look back"
                  class="px-4"
                  size={{ height: "2rem", width: "20rem" }}
                  icon={ArrowRight}
                />
              </div>
            </div>
          </div>
        </div>
      </div>
      <section class="bg-blue-700 rounded-b-xl h-full p-12">
        <div class="flex rounded-b-xl justify-center items-center">
          <div class="pt-0 flex rounded-b-xl p-4">
            <div
              class="flex flex-col md:grid xl:grid-cols-4 gap-4 w-full h-full lg:grid-cols-2 text-balance rounded-b-xl bg-blue-700 justify-center items-center"
            >
              {
                complianceCategories.map((el) => {
                  const Icon = el.icon;
                  return (
                    <Card className="h-full w-full flex mb-0 justify-center flex-col hover:shadow-2xl hover:translate-y-[-4px] text-balance bg-blue-600/80 text-white hover:bg-blue-600 shadow-none transition-all duration-300 rounded-xl">
                      <div>
                        <Icon class="w-6 h-6 my-[2em]" />
                      </div>
                      <div class="flex flex-col justify-center gap-6 mb-3">
                        <h3 class="text-2xl font-normal">{el.title}</h3>
                        <p class="text-[16px] font-thin text-pretty p-2 group-hover:text-white">
                          {el.description}
                        </p>
                      </div>
                    </Card>
                  );
                })
              }
            </div>
          </div>
        </div>
      </section>
    </section>
    <section class="h-full w-full bg-[whitesmoke]">
      <div
        class="gap-x-4 flex flex-col justify-center items-center"
      >
        <div class="col-span-3 w-full">
          <h1 class="text-center text-6xl font-thin pt-12">Insight Packs</h1>
          <h2
            class="text-center lg:text-2xl text-lg font-thin max-w-7xl text-balance mx-auto pt-6 mb-12"
          >
            Insight Packs deliver instant, business-ready KPIs â€” giving you a
            clear view from global performance down to company code and
            transaction-level detail. Pick the plan that fits your size, scale,
            and ambition.
          </h2>
          <div
            class="flex my-4 lg:flex-row flex-col justify-center items-center gap-x-4 font-thin"
          >
            <p class="lg:text-2xl text-xl">Want the full picture?</p>
            <Button
              text="Find my pack"
              class="lg:w-[16rem] w-[12rem] h-[2rem]"
              icon={ArrowRight}
            />
          </div>
        </div>
        <div
          class="col-span-3 flex flex-col lg:gap-y-8 lg:flex-row lg:gap-x-4"
        >
          {
            insightPacks.map((el) => {
              return (
                <div class="relative flex flex-col md:flex-row items-end p-12 rounded-lg text-white mt-12 aspect-square">
                  <div class="absolute inset-0">
                    <ImageCard client:load img={hero.src} />
                  </div>
                  <div class="flex justify-center items-center absolute -top-3 -right-3 bg-[white] rounded-full h-[60px] w-[60px] z-50">
                    <div class="bg-blue-700 text-[whitesmoke] text-md rounded-full p-2">
                      <ArrowRight class="hover:cursor-pointer hover:scale-110 transition-all duration-300 hover:translate-x-1" />
                    </div>
                  </div>
                  <div class="relative">
                    <h1 class="text-5xl">{el.title}</h1>
                    <p class="text-lg text-balance">{el.description}</p>
                    <ul class="flex flex-col gap-x-4 pt-4 text-lg list-disc">
                      {el.points.map((point: string) => {
                        return <li class="text-sm">{point}</li>;
                      })}
                    </ul>
                  </div>
                </div>
              );
            })
          }
        </div>
      </div>
    </section>
    <section
      class="flex justify-center mx-auto h-full w-full xl:m-24 xl:mr-0 xl:ml-0 bg-[whitesmoke]"
    >
      <aside
        class="flex lg:flex-row flex-col w-full lg:w-[90%] m-12 lg:m-24 lg:mb-0 xl:pl-12 rounded-xl bg-white h-full relative shadow-blue-700 shadow-2xl overflow-visible"
      >
        <div class="max-w-4xl flex flex-col items-center justify-center p-12">
          <div class="relative flex flex-col">
            <div
              class="relative -top-20 lg:-left-32 py-3 px-12 flex flex-col font-bold text-white bg-blue-700 shadow-2xl lg:p-12 rounded-lg lg:w-[30rem]"
            >
              <h1 class="lg:text-6xl text-4xl">Velocity</h1>
              <p
                class="lg:text-3xl text-xl font-thin text-balance relative text-center left-[2rem] lg:left-[6rem]"
              >
                by Taxera
              </p>
            </div>
          </div>
          <div class="h-full w-full relative flex flex-col -top-12">
            <div class="flex flex-col gap-y-8">
              <h1
                class="lg:text-5xl text-3xl text-left font-bold text-blue-700"
              >
                There's no going back.
              </h1>
              <Button
                class="h-[60px] w-[150px]"
                text="Blast Off"
                icon={ArrowRight}
              />
            </div>
          </div>
        </div>
        <img
          src={rocket.src}
          alt="Blast-off illustration"
          class="w-2/4 lg:max-w-none max-w-3/4 absolute right-0 lg:bottom-auto md:top-12 top-[75%] drop-shadow-2xl"
        />
      </aside>
    </section>
    <section
      class="flex justify-center items-center bg-[whitesmoke] flex-col gap-y-8 h-[60vh] w-screen"
    >
      <h2 class="text-2xl font-thin pb-12 px-12 text-center md:text-3xl pt-24">
        We win when you win. That's why we've built an intuitive platform that
        <span class="italic text-blue-700">just works</span>.
      </h2>
      <h2 class="text-2xl font-regular italic text-blue-700">
        Four steps for success
      </h2>
      <HiW client:load />
    </section>

    <!-- <section>
      <Stats />
    </section> -->
  </div>
</Layout>
